<SettingsFlyout
    x:Class="_30015379_DWA_Project.Help"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_30015379_DWA_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IconSource="Assets/SmallLogo.png"
    Title="Help"
    d:DesignWidth="346"
    ScrollViewer.VerticalScrollBarVisibility="Visible">

    <!-- This StackPanel acts as a root panel for vertical layout of the content sections -->
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >

        <!-- The StackPanel(s) below define individual content sections -->

        <!-- Content Section 1-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">

            <!-- Section 1 header -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Main Page Help" />

            <!-- Section 1 body -->
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,25" TextWrapping="Wrap">
                <TextBlock.Text>
                    Click on any of the buttons to be directed to the appropriate page. Categories will take you to the different attractions of Melbourne, divided into categories. Directions will allow you to look around Melbourne and find which way you would like to go. Favourites allows you to see all the attractions of Melbourne and save the ones you like most!
                </TextBlock.Text>
            </TextBlock>

        </StackPanel>
        <!-- Content Section 2-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">

            <!-- Section 2 header -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Categories Page Help" />

            <!-- Section 2 body -->
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,25" TextWrapping="Wrap">
                <TextBlock.Text>
                    Here, all the attractions of Melbourne are divided into different categories for your ease. Select whether you'd like to see local attractions, events or historic landmarks. Click on the buttons to see the items listed under each category, and then click on the items to see even more detailed information about each place or event!
                </TextBlock.Text>
            </TextBlock>

        </StackPanel>
        <!-- Content Section 1-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">

            <!-- Section 1 header -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Favourites Page Help" />

            <!-- Section 1 body -->
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,25" TextWrapping="Wrap">
                <TextBlock.Text>
                    Here you can save any of the locations or events around Melbourne so that you can easily find them and come back to them later! Simply click and drag an item to the right side of the screen to add them to your favourites, and click on the 'Save Favourites' button. If you want to make your favourites list over, simply click on the 'Delete Favourites' to start over!
                </TextBlock.Text>
            </TextBlock>

        </StackPanel>
        <!-- Content Section 1-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">

            <!-- Section 1 header -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Map Page Help" />

            <!-- Section 1 body -->
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,25" TextWrapping="Wrap">
                <TextBlock.Text>
                    Look around a map of Melbourne to help you find your way. Scroll up to zoom in, scroll down to zoom out. Click and drag to move the map and right click to add a waypoint to the map. Adding multiple waypoints will plot out a straight path between and calculate the distance! If you'd like to clear the map, simply click the 'Clear Map' button.
                </TextBlock.Text>
            </TextBlock>

        </StackPanel>

        <!-- Define more Content Sections below as necessary -->

    </StackPanel>
</SettingsFlyout>

